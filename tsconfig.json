{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@restai/db": ["./packages/db/src"],
      "@restai/validators": ["./packages/validators/src"],
      "@restai/types": ["./packages/types/src"],
      "@restai/config": ["./packages/config/src"],
      "@restai/ui": ["./packages/ui/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}
